<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Malaysian Ham Radio Callsign Search</title>
    <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
    <header>
        <h1>Malaysian Ham Radio Callsign Search</h1>
    </header>
    <div class="container">
        <form id="search-form" action="/api/callsign" method="get">
            <input type="text" name="callsign" placeholder="Enter callsign" required>
            <button type="submit">Search</button>
        </form>
        <div class="table-container">
            <table id="results-table">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Assignment Holder</th>
                        <th>Call Sign</th>
                        <th>Assign No</th>
                        <th>Expiry Date</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Results will be dynamically inserted here -->
                </tbody>
            </table>
        </div>
    </div>
    <footer>
        <p>Made for you by 9M2PJU ðŸ’ª</p>
    </footer>
    <script>
        document.getElementById('search-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(this);
            const queryString = new URLSearchParams(formData).toString();
            fetch(`/api/callsign?${queryString}`)
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        alert(data.error);
                        return;
                    }
                    const tableBody = document.querySelector('#results-table tbody');
                    tableBody.innerHTML = `
                        <tr>
                            <td>${data.number}</td>
                            <td>${data.name}</td>
                            <td>${data.callsign}</td>
                            <td>${data.assignment_number}</td>
                            <td>${data.expiry_date}</td>
                        </tr>
                    `;
                })
                .catch(error => {
                    alert('Error fetching data');
                    console.error('Error:', error);
                });
        });
    </script>
</body>
</html>

